<html>
<head>
  <title>Hair Salon Client and Stylist List</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
  <link href="css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
  <div class="container">
    <h1>{{ styists.getName }}</h1>

    {% if stylists is not empty %}
      <p>Here are all your Clients</p>
        <ul>
          {% for stylist in stylists %}
            <li>{{ stylist.getName }}</li>
          {% endfor %}
        </ul>
    {% endif %}

    <form action="/stylists" method="post">
      <label for="name">Stylist Name</label>
      <input id="name" name="name" type="text">

      <button type="submit">Add Stylist</button>
    </form>
    <form action="/delete_stylists" method="post">
      <button type="submit" class="btn btn-info">Clear</button>
    </form>

    <p><a href="/">Home</a></p>
  </div>
</body>
</html>
