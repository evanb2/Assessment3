<html>
<head>
  <title>Hair Salon Client and Stylist List</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class="container">
    <h1>Clients</h1>
      {% if clients is not empty %}
        <p>Here are all of this stylists' clients</p>
          <ul>
            {% for client in clients %}
              <li>{{ client.getName }}</li>
              <li>{{ client.getPhone }}</li>
              <li>{{ client.getEmail }}</li>
            {% endfor %}
          </ul>
      {% endif %}

      <form action="/clients" method="post">
        <label for="name">Client name:</label>
        <input id="name" name="name" type="text">

        <label for="phone">Client Phone:</label>
        <input id="phone" name="phone" type="text">

        <label for="email">Client Email Address:</label>
        <input id="email" name="email" type="text">

        <button type="submit">Add Client</button>
      </form>
      <form action="delete_clients" method="post">
        <button type="submit" class="btn btn-info">Delete Client</button>
      </form>

      <p><a href="/">Home</a></p>
  </div>
</body>
</html>
